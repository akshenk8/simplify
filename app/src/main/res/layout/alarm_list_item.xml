<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/alarmHourDisplay"
        android:textAlignment="center"
        android:text="23"
        android:textSize="@dimen/alarmHText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hnmdivider"
        android:text=":"
        android:textAlignment="center"
        android:layout_alignBottom="@id/alarmHourDisplay"
        android:layout_toRightOf="@id/alarmHourDisplay"
        android:layout_marginTop="-5dp"
        android:textSize="@dimen/alarmHText"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/alarmMinuteDisplay"
        android:textAlignment="center"
        android:text="00"
        android:textSize="@dimen/alarmHText"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/hnmdivider"
        android:layout_alignBottom="@id/alarmHourDisplay"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        />

    <TextView
        android:id="@+id/alarmAMPMDisplay"
        android:textAlignment="center"
        android:text="AM"
        android:textSize="@dimen/textSize"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/alarmMinuteDisplay"
        android:layout_alignBottom="@id/alarmHourDisplay"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteAlarm"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_delete_black_48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/alarmHourDisplay">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxSunday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxMonday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxTuesday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxWednesday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxThursday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxFriday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="@dimen/alarmDText"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_button"
            android:id="@+id/checkBoxSaturday"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>