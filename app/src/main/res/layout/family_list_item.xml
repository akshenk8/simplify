<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:elevation="3dp">

    <ImageView
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/marginLeft"
        android:layout_centerVertical="true"
        android:id="@+id/memberItemRemove"
        android:longClickable="true"
        android:background="@drawable/ic_clear_black_36dp"/>

    <View
        android:layout_width="5dp"
        android:layout_marginRight="@dimen/marginLeft"
        android:layout_height="match_parent"
        android:id="@+id/memberVerticalDividerRemove"
        android:background="@color/divider"
        android:layout_toRightOf="@id/memberItemRemove"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memberItemName"
        android:layout_marginLeft="@dimen/marginLeft"
        android:textColor="@color/primary_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/memberVerticalDividerRemove"
        android:textSize="@dimen/textSize"
        android:text="Member Name"/>

    <View
        android:layout_width="5dp"
        android:layout_marginRight="@dimen/marginLeft"
        android:layout_height="match_parent"
        android:id="@+id/memberVerticalDividerEdit"
        android:background="@color/divider"
        android:layout_toLeftOf="@+id/memberItemEdit"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memberItemEdit"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginLeft"
        android:paddingLeft="@dimen/marginLeft"
        android:longClickable="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_create_black_36dp"/>
</RelativeLayout>